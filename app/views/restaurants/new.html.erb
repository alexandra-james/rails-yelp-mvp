<div class="container">
  <h2>Create a new restaurant</h2>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category, collection: Restaurant::CUISINES %>
      <%= f.input :phone_number %>
      <%= f.submit %>
    <% end %>
</div>
